<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arka plan rengi -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Çerçeve -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp" >

            </stroke> <!-- Çerçeve kalınlığı -->
            android:color="@android:color/holo_blue_dark" />  <!-- Çerçeve rengi -->
            <corners android:radius="8dp" />  <!-- Köşelerin yuvarlaklığı -->
        </shape>
    </item>
</layer-list>
